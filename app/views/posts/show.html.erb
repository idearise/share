<script id="_post_title" type="text/x-handlebars-template">
{{title}}<br/>
<small>+{{up}} -{{down}} &bull; {{updated_at}} by <a href="/users/{{user_id}}">{{user_id}}{{user_name}}</a> &bull; <a href="{{url}}">{{domain}}</a></small> 
