<li>
  <div class="thumbnail">
      <a href="<%= app_path(app) -%>">
        <% if app.images.size > 0 and !app.images.last.file.blank? -%>
          <%= image_tag(app.images.last.file.thumb.url, :alt => app.images.last.description) -%>
        <% else -%>
          <img src="http://placehold.it/260x210/3C424C/cccccc&text=<%= "#{CGI.escape app.name}" -%>" alt="">
        <% end -%>
        <div class="caption">
          <h3><%= app.name -%></h3>
          <div id="dimension-<%= app.id -%>" data-placeholder="dimension-score" data-dimension-key="<%= app.id -%>"># Posts</div>
        </div>
      </a>
  </div>
</li>
